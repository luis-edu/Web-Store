@model Client
@{
    ViewData["Title"] = "Register";
}
<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">

    <!-- ============================ COMPONENT REGISTER   ================================= -->
    <div class="card mx-auto" style="max-width:520px; margin-top:40px;">
        <article class="card-body">
            <header class="mb-4"><h4 class="card-title">Registrar</h4></header>
            <form asp-controller="Home" asp-action="Register" method="post">
                <div class="form-row">
                    <div class="col form-group">
                        <label>Nome Completo</label>
                        <input asp-for="Name" type="text" class="form-control" placeholder="">
                        <span asp-validation-for="Name"></span>
                    </div> <!-- form-group end.// -->
                    <div class="col form-group">
                        <label>Data de Nascimento</label>
                        <input asp-for="Birthday" type="date" class="form-control" placeholder="">
                        <span asp-validation-for="Birthday"></span>
                    </div> <!-- form-group end.// -->
                </div> <!-- form-row end.// -->
                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="">
                <span asp-validation-for="Email"></span>
                    <small class="form-text text-muted">Nunca vamos compartilhar o seu email com ninguém.</small>
                </div> <!-- form-group end.// -->
                <div class="form-group">
                    <label class="custom-control custom-radio custom-control-inline">
                        <input class="custom-control-input" type="radio" asp-for="Sex" value="M">
                        <span class="custom-control-label"> Masculino </span>
                    </label>
                    <label class="custom-control custom-radio custom-control-inline">
                        <input class="custom-control-input" type="radio" asp-for="Sex" value="F">
                        <span class="custom-control-label"> Feminino </span>
                    </label>
                    <span asp-validation-for="Sex"></span>
                </div> <!-- form-group end.// -->
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>CPF</label>
                        <input asp-for="CPF" class="form-control" type="text">
                        <span asp-validation-for="CPF"></span>
                    </div> <!-- form-group end.// -->
                    <div class="form-group col-md-6">
                        <label>Senha</label>
                        <input asp-for="Password" class="form-control" type="password">
                        <span asp-validation-for="Password"></span>
                    </div> <!-- form-group end.// -->
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block"> Register  </button>
                </div> <!-- form-group// -->
                <div class="form-group">
                    <label class="custom-control custom-checkbox"> <input type="checkbox" class="custom-control-input" checked="" required=""> <div class="custom-control-label"> Eu concordo com os <a href="#">Termos e condições</a>  </div> </label>
                </div> <!-- form-group end.// -->
            </form>
        </article><!-- card-body.// -->
    </div> <!-- card .// -->
    <p class="text-center mt-4">Já possui uma conta?@Html.ActionLink("Login", "Login", "Home", null)</p>
    <br><br>
    <!-- ============================ COMPONENT REGISTER  END.// ================================= -->


</section>
<!-- ========================= SECTION CONTENT END// ========================= -->

