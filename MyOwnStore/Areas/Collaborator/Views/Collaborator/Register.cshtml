@model Collaborator
@{
    ViewData["Title"] = "Register";
}
@if (Model != null)
{
    <section role="main" class="content-body">
        <header class="page-header">
            <h2>Cadastrar Categoria</h2>

            <div class="right-wrapper pull-right">
                <ol class="breadcrumbs">
                    <li>
                        <a asp-action="Panel" asp-controller="Home">
                            <i class="fa fa-home"></i>
                        </a>
                    </li>
                    <li><a asp-action="Index" asp-controller="Collaborator"><span>Colaboradores</span></a></li>
                    <li><span>Atualizar Colaborador</span></li>
                </ol>

                <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
            </div>
        </header>
        <div class="row">
            <div class="col-md-12">

                <form asp-action="Update" asp-controller="Collaborator" method="post" class="form-horizontal">
                    <section class="panel panel-primary">
                        <header class="panel-heading">
                            <div class="panel-actions">
                                <a href="#" class="fa fa-caret-down"></a>
                            </div>

                            <h2 class="panel-title">Atualizar Colaborador</h2>
                        </header>
                        <div class="panel-body">
                            <input asp-for="Id" class="hidden" />
                            <input asp-for="Type" class="hidden" />
                            <div class="form-group">
                                <label asp-for="Name" class="col-sm-4 control-label"></label>
                                <div class="col-sm-8">
                                    <input asp-for="Name" class="form-control">
                                    <span asp-validation-for="Name"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="col-sm-4 control-label"></label>
                                <div class="col-sm-8">
                                    <input asp-for="Email" class="form-control">
                                    <span asp-validation-for="Email"></span>
                                </div>
                            </div>
                        </div>
                        <footer class="panel-footer">
                            <button type="submit" class="btn btn-primary">Atualizar </button>
                        </footer>
                    </section>
                </form>
            </div>
        </div>
    </section>

}
else
{
<section role="main" class="content-body">
    <header class="page-header">
        <h2>Cadastrar Categoria</h2>

        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a asp-action="Panel" asp-controller="Home">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li><a asp-action="Index" asp-controller="Collaborator"><span>Colaboradores</span></a></li>
                <li><span>Cadastrar Colaborador</span></li>
            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>
    @if (TempData["MSG_E"] != null)
    {
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <strong>Ooops!</strong> Parece que algo deu errado... Que tal tentar novamente?
        </div>
    }
    else if (TempData["MSG_S"] != null)
    {
        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <strong>Maravilha!</strong> As informações foram modificadas com sucesso!
        </div>
    }
    <div class="row">
        <div class="col-md-12">

            <form asp-action="Register" asp-controller="Collaborator" method="post" class="form-horizontal">
                <section class="panel panel-primary">
                    <header class="panel-heading">
                        <div class="panel-actions">
                            <a href="#" class="fa fa-caret-down"></a>
                        </div>

                        <h2 class="panel-title">Cadastrar Colaborador</h2>
                    </header>
                    <div class="panel-body">
                        <div class="form-group">
                            <label asp-for="Name" class="col-sm-4 control-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="Name" class="form-control">
                                <span asp-validation-for="Name"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="col-sm-4 control-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="Email" class="form-control">
                                <span asp-validation-for="Email"></span>
                            </div>
                        </div>
                    </div>
                    <footer class="panel-footer">
                        <button type="submit" class="btn btn-primary">Cadastrar </button>
                        <button type="reset" class="btn btn-default">Resetar</button>
                    </footer>
                </section>
            </form>
        </div>
    </div>
</section>
}


