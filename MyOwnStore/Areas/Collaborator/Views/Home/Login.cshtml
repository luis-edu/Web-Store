@model Collaborator
@{
    ViewData["Title"] = "Login";
}
@{ 
    Layout = "_CleanLayout";
}
<section class="body-sign">
    <div class="center-sign">
        <a href="/" class="logo pull-left">
            <img src="~/images/logo.svg" height="54" alt="Porto Admin" />
        </a>

        <div class="panel panel-sign">
            <div class="panel-title-sign mt-xl text-right">
                <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i>Login</h2>
            </div>
            <div class="panel-body">
                <form asp-action="Login" asp-controller="Home" method="post">
                    <div class="form-group mb-lg">
                        <label asp-for="Email"></label>
                        <div class="input-group input-group-icon">
                            <input asp-for="Email" type="email" class="form-control input-lg" />
                            <span class="input-group-addon">
                                <span class="icon icon-lg">
                                    <i class="fa fa-envelope"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div class="form-group mb-lg">
                        <div class="clearfix">
                            <label asp-for="Password" class="pull-left"></label>
                            <a href="pages-recover-password.html" class="pull-right">Esqueceu sua senha?</a>
                        </div>
                        <div class="input-group input-group-icon">
                            <input asp-for="Password" type="password" class="form-control input-lg" />
                            <span class="input-group-addon">
                                <span class="icon icon-lg">
                                    <i class="fa fa-lock"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-8">
                            <div class="checkbox-custom checkbox-default">
                            </div>
                        </div>
                        <div class="col-sm-4 text-right">
                            <button type="submit" class="btn btn-primary hidden-xs">Entrar</button>
                            <button type="submit" class="btn btn-primary btn-block btn-lg visible-xs mt-lg">Entrar</button>
                        </div>
                    </div>

                    @if (TempData["l_err"] != null)
                    {
                        <div class="alert alert-warning fade in nomargin">
                            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                            <h4>Ooops!</h4>
                            <p>Parece que algo deu errado na sua tentativa de login...</p>
                            <p>Que tal verificar os deus dados e tentar novamente?</p>
                        </div>
                    }
                </form>
            </div>
        </div>

        <p class="text-center text-muted mt-md mb-md">&copy; Todos os direitos reservados para sua empresa desde 2020 - @DateTime.Now.Year </p>
    </div>
</section>
<!-- end: page -->



