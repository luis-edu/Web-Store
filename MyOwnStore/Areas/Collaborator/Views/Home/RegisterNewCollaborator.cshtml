
@{
    ViewData["Title"] = "RegisterNewCollaborator";
}



    <section role="main" class="content-body">
        <header class="page-header">
            <h2>Cadastrar Colaborador</h2>

            <div class="right-wrapper pull-right">
                <ol class="breadcrumbs">
                    <li>
                        <a asp-action="Panel" asp-controller="Home">
                            <i class="fa fa-home"></i>
                        </a>
                    </li>
                    <li><span>Colaboradores</span></li>
                    <li><span>Cadastrar Colaborador</span></li>
                </ol>

                <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
            </div>
        </header>
        <div class="row">
            <div class="col-lg-12">
                <form class="form-horizontal form-bordered" asp-action="RegisterNewCollaborator" asp-controller="Home" method="post">
                    <section class="panel">
                        <header class="panel-heading">
                            <div class="panel-actions">
                                <a href="#" class="fa fa-caret-down"></a>
                                <a href="#" class="fa fa-times"></a>
                            </div>

                            <h2 class="panel-title">Cadastrar novo colaborador</h2>
                        </header>
                        <div class="panel-body">

                            <div class="form-group">
                                <label class="col-md-3 control-label">Nome</label>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Email</label>
                                <div class="col-md-6">
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Senha</label>
                                <div class="col-md-6">
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="w4-last-name">Nivel de Acesso</label>
                                <div class="col-sm-9">
                                    <div class="col-md-6">
                                        <select data-plugin-selectTwo class="form-control populate">
                                            <optgroup label="Administração">
                                                <option value="rr">Reembolso</option>
                                                <option value="ds">Descontos</option>
                                            </optgroup>
                                            <optgroup label="Vendas">
                                                <option value="ve">Vendedor</option>
                                            </optgroup>
                                            <optgroup label="Gerencia">
                                                <option value="gv">Gerente de vendas</option>
                                                <option value="ga">Gerente Administrativo</option>
                                            </optgroup>
                                        </select>
                                    </div>
                                </div>
                            </div>


                        </div>
                        <footer class="panel-footer">
                            <div class="row">
                                <div class="col-sm-9 col-sm-offset-3">
                                    <button class="btn btn-primary" type="submit">Cadastrar</button>
                                    <button type="reset" class="btn btn-default">Resetar</button>
                                </div>
                            </div>
                        </footer>
                    </section>
                </form>
            </div>
        </div>
    </section>
